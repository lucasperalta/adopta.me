<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/nombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Nombre"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fotoMascota"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/edadMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Edad"
        android:textColor="@android:color/black"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="150dp"
        android:layout_below="@+id/fotoMascota"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fotoSexo"
        android:layout_below="@+id/fotoMascota"
        android:src="@drawable/malesymbol"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/black"


        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/razaMascota"
    android:textColor="@android:color/black"
    android:text="Raza"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:textSize="30dp"
    android:layout_below="@+id/nombreMascota"
    android:textStyle="bold"



    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/descripcionMascota"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:text="descripcion"
        android:layout_margin="20dp"
        android:layout_below="@+id/razaMascota"

        />

</RelativeLayout>
</ScrollView>